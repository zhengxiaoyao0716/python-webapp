{
    "Name": "python-webapp",
    "Author": "zhengxiaoyao0716",
    "Version": "0.0.1",
    "Keywords": ["python", "flask", "web"],
    "Description": "基于Flask的webapp开发模板",
    "Addresses": [],  // default: ["https://github.com/$Author/$Name/archive/$version.zip", "https://github.com/$Author/$Name/archive/master.zip", "https://github.com/$Author/$Name/archive/gh-pages.zip]
    "variables": {
        "appId": {
            "title": "应用标识",
            "value": "python-webapp"
        },
        "appName": {
            "title": "应用名（可读）",
            "value": "python-webapp"
        },
        "author": {
            "title": "作者",
            "value": "Unknown"
        },
        "dbConnectDeploy": {
            "title": "数据库连接（正式部署）",
            "value": {
                "expression": "mysql+pymysql://{{account}}:{{password}}@{{serverIp}}:{{port}}/{{dbName}}?charset={{charset}}",
                "keywords": {
                    "{{account}}": "root",
                    "{{password}}": "password",
                    "{{serverIp}}": "127.0.0.1",
                    "{{port}}": "3306",
                    "{{dbName}}": "{{appName}}",
                    "{{charset}}": "utf8mb4"
                }
            }
        },
        "dbConnectDevelop": {
            "title": "数据库连接（开发环境）",
            "value": "sqlite:///.{{appName}}.db"
        }
    },
    "replace": [
        {
            "files": ["./share/src/config/__init__.py"],
            "keywords": [
                {
                    "{{deploy}}": "dbConnectDeploy",
                    "{{develop}}": "dbConnectDevelop"
                }
            ]
        },
        {
            "files": [
                "./share/src/main/config.py",
                "./share/src/script/test.py"
            ],
            "keywords":[
                {
                    "{{appId}}": "appId"
                }
            ]
        },
        {
            "files": [
                "./share/src/html/index.html",
                "./share/src/main/__init__.py"
            ],
            "keywords": [
                {
                    "{{appName}}": "appName"
                },
                {
                    "{{author}}": "author"
                }
            ]
        }
    ]
}